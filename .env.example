# Predictive Infrastructure Intelligence - Environment Configuration
# Copy this to .env and customize for your environment

# ===== Application Settings =====
FLASK_ENV=development
FLASK_DEBUG=False
APP_NAME="Predictive Infrastructure Intelligence"
TESTING=False

# ===== Server Settings =====
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# ===== Logging Settings =====
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ===== Kubernetes Settings =====
K8S_NAMESPACE=default
# KUBECONFIG=/path/to/kubeconfig  # Optional: specify kubeconfig location

# ===== Monitoring Settings =====
MONITORING_INTERVAL=3
MAX_HISTORY_RECORDS=1000

# ===== API Settings =====
API_TIMEOUT=30
MAX_WORKERS=4

# ===== Health Check Settings =====
HEALTH_CHECK_INTERVAL=5
HEALTH_CHECK_TIMEOUT=10

# ===== Risk Detection Thresholds =====
RISK_THRESHOLD_CRITICAL=70.0
RISK_THRESHOLD_WARNING=50.0

# ===== Feature Flags =====
ENABLE_ML_PREDICTIONS=True
ENABLE_AUTO_REMEDIATION=False
ENABLE_EVENT_STREAMING=False

# ===== Security Settings =====
CORS_ORIGINS=*
API_RATE_LIMIT=1000
REQUEST_TIMEOUT=60
